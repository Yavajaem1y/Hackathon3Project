<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavigationStyle">
        <item name="android:background">?android:attr/windowBackground</item>
        <item name="chipIconSize">40dp</item>
        <item name="height">80dp</item>
        <item name="paddingEnd">80dp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="SelectedFilterStyle">
        <item name="android:textColor"> @color/black</item>
        <item name="android:textStyle"> bold</item>
        <item name="android:textSize"> 14sp</item>
    </style>

    <style name="UnselectedFilterStyle">
        <item name="android:textColor"> @color/userAvatarColor</item>
        <item name="android:textStyle"> normal</item>
        <item name="android:textSize"> 12sp</item>
    </style>
</resources>