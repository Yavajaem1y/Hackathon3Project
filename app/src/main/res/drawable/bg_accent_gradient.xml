<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Прозрачный фон -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>

    <!-- Градиент сверху слева (20% видимости) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#33F09065"
            android:endColor="@android:color/transparent"
            android:angle="45"/>  <!-- Верхний левый угол -->
        </shape>
    </item>

    <!-- Градиент снизу справа (5% видимости) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#0DF09065"
            android:endColor="@android:color/transparent"
            android:angle="225"/>  <!-- Нижний правый угол -->
        </shape>
    </item>

</layer-list>
