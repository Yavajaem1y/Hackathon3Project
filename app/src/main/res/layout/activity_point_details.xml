<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingEnd="20dp"
    android:paddingStart="20dp"
    android:background="@color/MainBackground">

    <RelativeLayout
        android:id="@+id/rl_top_element"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp">
        <ImageView
            android:id="@+id/b_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_left_arrow_white"
            android:background="@drawable/bg_circle"
            android:padding="4dp"/>
        <TextView
            android:id="@+id/tv_point_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Point Name"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:fontFamily="@font/fustat_medium"/>
        <ImageView
            android:id="@+id/b_proud"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_white_heart"
            android:background="@drawable/bg_circle"
            android:layout_alignParentEnd="true"
            android:padding="8dp"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_top_element"
        android:layout_marginTop="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_image_holder"
            android:layout_width="337dp"
            android:layout_height="178dp"
            app:cardCornerRadius="16dp"
            android:layout_centerHorizontal="true">
            <ImageView
                android:id="@+id/iv_item_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/rl_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cv_image_holder"
            android:visibility="gone">
            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#87888C"/>
            <TextView
                android:id="@+id/tv_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineHeight="18dp"
                android:textColor="#E2E2E2"
                android:textSize="13sp"
                android:fontFamily="@font/montserrat_italic"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#87888C"
                android:layout_below="@id/tv_hint"/>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_hint"
            android:layout_marginTop="8dp"/>
        <TextView
            android:id="@+id/b_resume"
            android:layout_width="327dp"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/recyclerView_items"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_rounded_accent"
            android:text="Продолжить"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="@font/inter_18pt_semibold"/>
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>