<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:background="@drawable/bg_rounded_24dp_light_grey"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_tv_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выйти"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/inter_18pt_extrabold"/>
    <TextView
        android:id="@+id/tv_tv_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вы уверенны, что хотите выйти?"
        android:layout_below="@id/tv_tv_first"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/userAvatarColor"
        android:textSize="12sp"
        android:layout_marginBottom="28dp"
        android:fontFamily="@font/inter_28pt_regular"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_tv_second"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/b_cancellation"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_rounded_gery_with_accent_stroke"
            android:gravity="center"
            android:padding="12dp"
            android:text="Отмена"
            android:textColor="@color/AccentColor"
            android:textSize="12sp"
            android:fontFamily="@font/inter_18pt_semibold" />

        <TextView
            android:id="@+id/b_log_out"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_rounded_accent"
            android:gravity="center"
            android:padding="12dp"
            android:text="Выход"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:fontFamily="@font/inter_18pt_semibold"/>
    </LinearLayout>

</RelativeLayout>