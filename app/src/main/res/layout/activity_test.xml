<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.main.ui.activities.TestActivity"
    android:background="@color/MainBackground">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@drawable/gradient"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">
        <RelativeLayout
            android:id="@+id/rl_top_element"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/b_cancellation"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/bg_circle_grey"
                android:src="@drawable/ic_cancellation"
                android:padding="8dp"
                android:layout_alignParentEnd="true"/>
            <TextView
                android:id="@+id/progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1/10"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:layout_toLeftOf="@id/b_cancellation"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:textColor="#E2E2E2"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:background="@drawable/bg_rounded_16dp_light_grey"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@id/progress_text"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"/>
            <FrameLayout
                android:id="@+id/progress_container"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@id/progress_text"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_rounded_16dp_light_grey">

                <!-- Сам прогресс -->
                <View
                    android:id="@+id/progress_view"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_rounded_16dp_accent"/>
            </FrameLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/question_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Текст вопроса"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginTop="24dp"
            android:layout_below="@id/rl_top_element" />

        <TextView
            android:id="@+id/option1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:layout_below="@id/question_text"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_rounded_8dp_grey">
        </TextView>
        <TextView
            android:id="@+id/option2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/option1"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_rounded_8dp_grey"
            android:layout_marginTop="16dp">
        </TextView>
        <TextView
            android:id="@+id/option3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/option2"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_rounded_8dp_grey"
            android:layout_marginTop="16dp">
        </TextView>
        <TextView
            android:id="@+id/option4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/option3"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_rounded_8dp_grey"
            android:layout_marginTop="16dp">
        </TextView>

        <TextView
            android:id="@+id/next_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Продолжить"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:background="@drawable/bg_rounded_12dp_grey"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

</RelativeLayout>