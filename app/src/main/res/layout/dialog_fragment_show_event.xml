<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:fitsSystemWindows="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_circle"
                    android:src="@drawable/ic_left_arrow_white"
                    android:layout_marginTop="8dp"
                    android:padding="4dp"
                    android:layout_marginStart="20dp"/>
                <ImageView
                    android:id="@+id/iv_proud"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:padding="8dp"
                    android:background="@drawable/bg_circle"
                    android:src="@drawable/ic_white_heart"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="20dp"
                    android:layout_alignParentEnd="true"/>
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_back"
                    android:layout_marginTop="24dp"
                    android:layout_alignParentBottom="true"
                    android:fillViewport="true"
                    android:background="@drawable/bg_rounded_top_24dp_main_background">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:id="@+id/main_rl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="12dp">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/cv_with_avatar"
                                android:layout_width="match_parent"
                                android:layout_height="178dp"
                                app:cardCornerRadius="16dp">
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/Grey">
                                    <ImageView
                                        android:layout_width="43dp"
                                        android:layout_height="43dp"
                                        android:layout_marginBottom="8dp"
                                        android:layout_centerHorizontal="true"
                                        android:src="@drawable/ic_empty_photo"
                                        android:layout_centerInParent="true"/>

                                    <ImageView
                                        android:id="@+id/iv_preview_image"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent" />
                                </RelativeLayout>
                            </androidx.cardview.widget.CardView>
                            <LinearLayout
                                android:id="@+id/ll_article_of_the_day"
                                android:layout_width="100dp"
                                android:layout_height="22dp"
                                android:layout_below="@id/cv_with_avatar"
                                android:background="@drawable/bg_rounded_5dp_white"
                                android:gravity="center"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="12dp">
                                <ImageView
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:src="@drawable/ic_fire"
                                    android:layout_marginEnd="2dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Статья дня"
                                    android:textSize="11sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"/>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/ll_date"
                                android:layout_width="wrap_content"
                                android:minWidth="125dp"
                                android:layout_height="30dp"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_alignParentEnd="true"
                                android:layout_below="@id/cv_with_avatar"
                                android:layout_marginTop="12dp"
                                android:layout_marginEnd="10dp"
                                android:background="@drawable/bg_rounded_16dp_grey">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/icon_date"
                                    android:layout_marginEnd="2dp"/>
                                <TextView
                                    android:id="@+id/tv_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:textColor="@color/white"
                                    android:gravity="center"
                                    android:text="6-9 апреля 1945"
                                    tools:ignore="SmallSp">
                                </TextView>
                            </LinearLayout>
                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Name"
                                android:layout_below="@id/ll_date"
                                android:layout_marginTop="12dp"
                                android:textColor="@color/white"
                                android:textStyle="bold"
                                android:textSize="22sp"/>
                            <TextView
                                android:id="@+id/tv_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="info"
                                android:layout_below="@id/tv_name"
                                android:layout_marginTop="12dp"
                                android:textColor="#E2E2E2"
                                android:textSize="13sp"
                                android:lineHeight="16dp"
                                android:fontFamily="@font/fustat_regular"/>
                        </RelativeLayout>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_alignParentBottom="true"
                            android:layout_below="@id/main_rl"
                            android:background="@drawable/bottom_gradient"/>
                    </RelativeLayout>
                </ScrollView>
            </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>