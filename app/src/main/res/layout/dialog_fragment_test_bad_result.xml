<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:paddingEnd="27dp"
        android:paddingStart="27dp"
        android:background="@drawable/bg_rounded_top_32dp_grey"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/iv1"
            android:layout_width="285dp"
            android:layout_height="285dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:src="@drawable/sad"/>
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Тест не пройден"
            android:textSize="24dp"
            android:textColor="@color/white"
            android:fontFamily="@font/inter_28pt_bold"
            android:layout_below="@id/iv1"
            android:layout_marginTop="16dp"/>
        <TextView
            android:id="@+id/result_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Правильных ответов: X из X"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/inter_28pt_bold"
            android:layout_below="@id/tv1"
            android:layout_marginTop="37dp"/>
        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Вы можете попробовать пройти\nэтот тест еще раз"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:fontFamily="@font/inter_18pt_medium"
            android:layout_below="@id/result_text"
            android:layout_marginTop="12dp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/close_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Продолжить"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:gravity="center"
            android:fontFamily="@font/inter_18pt_semibold"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_rounded_12dp_accent">
        </TextView>
    </RelativeLayout>
</RelativeLayout>